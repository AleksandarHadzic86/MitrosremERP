@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item">
            <a id="manage" class="nav-link d-flex align-items-center" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class='bx bx-user-circle' style="font-size:22px;"></i> <span class="mx-1 pt-1">@UserManager.GetUserName(User)</span> </a>
    </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline d-flex align-items-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link  border-0 d-flex align-items-center"><i class='bx bx-log-out-circle' style="font-size:22px;"></i><span class="pt-1 mx-1">Izloguj se</span></button>
        </form>
    </li>
}
