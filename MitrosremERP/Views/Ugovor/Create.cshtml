@using MitrosremERP.Aplication.ViewModels.ZaposleniMitroSremVM;

@model UgovoriVM

@{
    ViewBag.Title = "Ugovori";
}
 @await Html.PartialAsync("_ZaposleniNav"); 


<div class="container-fluid mt-5 mb-5">
    <form method="post" class="row" autocomplete="off" >
        <div class="col-lg-8 px-3">
            <div class="card mb-4 mb-xl-0">
                <h-3 class="card-header bg-primary text-white">Kreiraj Ugovor</h-3>
                <input hidden asp-for="Zaposleni.Id"/>
                <input hidden asp-for="ZaposleniId" />
                <div class="row px-3">
                    <div class="col-lg-4 col-sm-8 card-body">
                        <div class="mb-3">
                            <label class="small mb-1" asp-for="BrojUgovora"></label>
                            <div class="input-group">
                                <div class="input-group-text">
                                    <i class='bx bxs-user-circle'></i>
                                </div>
                                <input asp-for="BrojUgovora" class="form-control" />
                            </div>
                            <span asp-validation-for="BrojUgovora" class="text-danger"></span>
                        </div>

                         <div class="mb-3">
                            <label class="small mb-1" asp-for="TipUgovora"></label>
                            <div class="input-group">
                                <div class="input-group-text">
                                    <i class='bx bxs-user-circle'></i>
                                </div>
                                <input asp-for="TipUgovora" class="form-control" />
                            </div>
                            <span asp-validation-for="TipUgovora" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="small mb-1" asp-for="BrojDanaGodisnjeg"></label>
                            <div class="input-group">
                                <div class="input-group-text">
                                    <i class='bx bxs-user-circle'></i>
                                </div>
                                <input asp-for="BrojDanaGodisnjeg" class="form-control" />
                            </div>
                            <span asp-validation-for="BrojDanaGodisnjeg" class="text-danger"></span>
                        </div>


                    </div>


                    <div class="col-lg-4 col-sm-8 card-body ">


                         <div class="mb-3">
                            <label class="small mb-1" asp-for="DatumPocetka"></label>
                            <div class="input-group">
                                <div class="input-group-text">
                                    <i class='bx bx-calendar'></i>
                                </div>
                                <input readonly asp-for="DatumPocetka" type="text" name="Zaposleni.DatumRodjenja" id="Zaposleni.DatumRodjenja" value="@Model.DatumPocetka.ToString("dd.MMMM.yyyy")" class="datepicker form-control" />
                            </div>
                            <span asp-validation-for="DatumPocetka" class="text-danger"></span>
                        </div> 
                        <div class="mb-3">
                            <label class="small mb-1" asp-for="DatumZavrsetka"></label>
                            <div class="input-group">
                                <div class="input-group-text">
                                    <i class='bx bx-calendar'></i>
                                </div>
                                <input readonly asp-for="DatumZavrsetka" type="text" name="DatumZavrsetka" id="DatumZavrsetka" value="@Model.DatumZavrsetka?.ToString("dd.MM.yyyy")" class="datepicker form-control" />
                            </div>
                            <span asp-validation-for="DatumZavrsetka" class="text-danger"></span>
                        </div>



                    </div>
                </div>
            </div>
        </div> 

        <div class="col-lg-4 px-3">
            <div class="card mb-4 mb-xl-0">
                <h-3 class="card-header bg-info text-white">Zaposleni</h-3>

                <div class="row px-3">
                    <div class="col-lg-4 col-sm-8 card-body">
                        <div class="mb-3">

                            <label class="small mb-1" asp-for="Zaposleni.Ime"></label>                        
                            <div class="input-group">
                                <div class="input-group-text">
                                    <i class='bx bxs-user-circle'></i>
                                </div>
                                <input readonly asp-for="Zaposleni.Ime" class="form-control" />
                            </div>
                            <span asp-validation-for="Zaposleni.Ime" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="small mb-1" asp-for="Zaposleni.Prezime"></label>
                            <div class="input-group">
                                <div class="input-group-text">
                                    <i class='bx bxs-user-circle'></i>
                                </div>
                                <input readonly asp-for="Zaposleni.Prezime" class="form-control" />
                            </div>
                            <span asp-validation-for="Zaposleni.Prezime" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="small mb-1" asp-for="Zaposleni.JMBG"></label>
                            <div class="input-group">
                                <div class="input-group-text">
                                    <i class='bx bx-id-card'></i>
                                </div>
                                <input readonly asp-for="Zaposleni.JMBG" class="form-control jmbgText" />
                            </div>

                            <span asp-validation-for="Zaposleni.JMBG" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="small mb-1" asp-for="Zaposleni.Mobilni"></label>
                            <div class="input-group">
                                <div class="input-group-text">
                                    <i class='bx bx-mobile'></i>
                                </div>
                                <input readonly asp-for="Zaposleni.Mobilni" class="form-control" />
                            </div>
                            <span asp-validation-for="Zaposleni.Mobilni" class="text-danger"></span>
                        </div>
                                       
                    </div>          
                </div>
            </div>
        </div>
        <div class="col-8 px-3 py-3">
            <button type="submit" class="btn btn-success">Kreiraj</button>
            <a asp-controller="Zaposleni" asp-action="Index" class="btn btn-secondary">Povratak na listu</a>
        </div>
    </form>
</div>

@section Scripts{
    @{
         @await Html.PartialAsync("_DatePicker")
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
}