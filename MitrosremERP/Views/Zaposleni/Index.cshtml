@using MitrosremERP.Domain.Models;
@model IEnumerable<Zaposleni>


<div class="align-items-center container-xxl ">
<div class="row pb-3 ">
    <div class="mt-5 mb-2">
        <form asp-action="Index" method="get">
            <div class="form-actions d-flex flex-row align-items-end">
                <div class="col-lg-3">
                    <input type="search" class="form-control me-sm-2" placeholder="Pretrazi po Imenu" name="SearchString" value="@ViewData["CurrentFilter"]" />
                </div>
              @*   <div class="col-lg-3 mx-2">
                    <a class="btn btn-secondary my-2 my-sm-0" asp-action="Index">ListaZaposlenih</a>
                </div>  *@                        
            </div>
        </form>
    </div>
        
            <table class="table align-middle mb-0 bg-white">
              <thead class="bg-light">
                    <tr>
                        <th>Ime i Prezime</th>
                        <th>Profesija</th>
                        <th>Status po ugovoru</th>
                        <th>Radno mesto</th>
                        <th>Akcija</th>
                    </tr>
                @foreach (var zaposleni in Model)
                {              
                <tbody>
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="https://mdbootstrap.com/img/new/avatars/8.jpg"
                                     alt=""
                                     style="width: 45px; height: 45px"
                                     class="rounded-circle" />
                                <div class="ms-3">
                                    <p class="fw-bold mb-1">@zaposleni.Ime @zaposleni.Prezime</p>
                                    <p class="text-muted mb-0">@zaposleni.Mobilni</p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="fw-normal mb-1">@zaposleni.Profesija</p>
                            @* <p class="text-muted mb-0">IT department</p> *@
                        </td>
                        <td>
                            <span class="badge badge-success rounded-pill d-inline bg-success">Aktivan</span>
                        </td>
                        <td>@zaposleni.RadnoMesto</td>
                        <td>
                           <div class="btnbtn-group" role="group">
                                <a asp-controller="Zaposlni" asp-action="Edit" class="btn btn-primary mx-2"><i class='bx bxs-edit'></i>Uredi</a>
                              
                                <a asp-controller="Zaposleni" asp-action="Delete" class="btn btn-danger mx-2"><i class='bx bx-trash'></i>Obrisi</a>
                           </div>
                        </td> 
                       
                    </tr>
                    
                </tbody>
                }
           </thead>
         </table>
      
</div>
</div>



