@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Molim vas odaberite korisnicko ime" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Ime" class="form-control" placeholder="Molim vas unesite ime." />
                <label asp-for="Input.Ime" class="form-label"></label>
                <span asp-validation-for="Input.Ime" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Prezime" class="form-control" placeholder="Molim vas unesite prezime." />
                <label asp-for="Input.Prezime" class="form-label"></label>
                <span asp-validation-for="Input.Prezime" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Adresa" class="form-control" placeholder="Molim vas unesite adresu." />
                <label asp-for="Input.Adresa" class="form-label"></label>
                <span asp-validation-for="Input.Adresa" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Grad" class="form-control" placeholder="Molim vas unesite grad." />
                <label asp-for="Input.Grad" class="form-label"></label>
                <span asp-validation-for="Input.Grad" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Mobilni" class="form-control" placeholder="Molim vas unesite mobilni." />
                <label asp-for="Input.Mobilni" class="form-label"></label>
                <span asp-validation-for="Input.Mobilni" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
