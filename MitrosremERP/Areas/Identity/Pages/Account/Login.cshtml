@page
@model LoginModel

@{
    ViewData["Title"] = "Uloguj se";
}
<form id="account" method="post" >
    <div class="px-3 d-flex justify-content-center" style="margin-top: 80px;">
             <div class="card mb-5  col-7">
                <h4 class="card-header bg-primary text-white">Uloguj se</h4>
                <div class="row px-3">
                    <div class="col-lg-4 col-sm-8 mt-5 card-body">
                        <div class="mb-3">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="ime@primer.com" />
                                    <label asp-for="Input.Email" class="form-label">Email</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="lozinka" />
                                    <label asp-for="Input.Password" class="form-label">Lozinka</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="checkbox mb-3">
                                    <label asp-for="Input.RememberMe" class="form-label">
                                        <input class="form-check-input" asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                                <div>
                                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-secondary">Uloguj se</button>
                                </div>
                               <div class="mt-2 ">
                                    <p>
                                        <a id="forgot-password" asp-page="./ForgotPassword">Zaboravljena lozinka?</a>
                                    </p>
                                    <p>
                                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Ponovo posalji potvrdni email za registraciju</a>
                                    </p>
                                </div>
                       </div>
                    </div>
                </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
