@page
@model RegisterModel
@{
    ViewData["Title"] = "Registracija";
}

<div class="container-fluid  mt-5 mb-5">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="col-lg-8 px-3">
            <div class="card mb-4 mb-xl-0">
                <h4 class="card-header bg-primary text-white">Kreiraj novog Korisnika</h4>
                <div class="row px-3">
                    <div class="col-lg-4 col-sm-8 card-body">
                        <div class="mb-3">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Ime" class="form-control" placeholder="Ime" />
                                    <label asp-for="Input.Ime">Ime</label>
                                    <span asp-validation-for="Input.Ime" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Prezime" class="form-control" placeholder="Prezime" />
                                    <label asp-for="Input.Prezime">Prezime</label>
                                    <span asp-validation-for="Input.Prezime" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Adresa" class="form-control" placeholder="Adresa" />
                                    <label asp-for="Input.Adresa">Adresa</label>
                                    <span asp-validation-for="Input.Adresa" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Grad" class="form-control" placeholder="Grad" />
                                    <label asp-for="Input.Grad">Grad</label>
                                    <span asp-validation-for="Input.Grad" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Mobilni" class="form-control" placeholder="Mobilni" />
                                    <label asp-for="Input.Mobilni">Mobilni</label>
                                    <span asp-validation-for="Input.Mobilni" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="ime@primer.com" />
                                    <label asp-for="Input.Email">Email</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="lozinka" />
                                    <label asp-for="Input.Password" >Lozinka</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="lozinka" />
                                    <label asp-for="Input.ConfirmPassword">Potvrdi Lozinku</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                                        <option disabled selected>--Odaberi Ulogu Korisnika--</option>
                                    </select>
                                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                                </div>
                                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-secondary">Registruj</button>
                         </div>  
                     </div>
               </div>             
           </div>
        </div>
     </form>   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
